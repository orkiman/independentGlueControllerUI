<Window x:Class="GlueControllerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlueControllerUI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:GlueControllerUI.Views"
        xmlns:vm="clr-namespace:GlueControllerUI.ViewModels"
        mc:Ignorable="d"
        Title="Glue Controller Configuration" 
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="15,20,15,20">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Spray" Width="32" Height="32" 
                                                      Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                      VerticalAlignment="Center"/>
                            <TextBlock Text="Glue Controller" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Connection Status -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Ellipse Width="10" Height="10" 
                                     Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ConnectionStatus}" 
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Navigation Items -->
                    <StackPanel Grid.Row="1" Margin="10,0,10,10">
                        <RadioButton Content="Connection"
                                     IsChecked="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Connection}"
                                     Command="{Binding NavigateToCommand}"
                                     CommandParameter="Connection"
                                     Padding="10,8"
                                     Margin="0,2"/>
                        
                        <RadioButton Content="Controller Setup"
                                     IsChecked="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Setup}"
                                     Command="{Binding NavigateToCommand}"
                                     CommandParameter="Setup"
                                     Padding="10,8"
                                     Margin="0,2"/>
                        
                        <RadioButton Content="Gun Configuration"
                                     IsChecked="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Guns}"
                                     Command="{Binding NavigateToCommand}"
                                     CommandParameter="Guns"
                                     Padding="10,8"
                                     Margin="0,2"/>
                        
                        <RadioButton Content="Calibration"
                                     IsChecked="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Calibration}"
                                     Command="{Binding NavigateToCommand}"
                                     CommandParameter="Calibration"
                                     Padding="10,8"
                                     Margin="0,2"/>
                        
                        <RadioButton Content="Test Mode"
                                     IsChecked="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Test}"
                                     Command="{Binding NavigateToCommand}"
                                     CommandParameter="Test"
                                     Padding="10,8"
                                     Margin="0,2"/>
                        
                        <RadioButton Content="Profiles"
                                     IsChecked="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Profiles}"
                                     Command="{Binding NavigateToCommand}"
                                     CommandParameter="Profiles"
                                     Padding="10,8"
                                     Margin="0,2"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Border Grid.Column="1" Background="{DynamicResource MaterialDesignBackground}">
                <Grid>
                    <!-- Connection Page -->
                    <views:ConnectionView Visibility="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Connection}"/>
                    
                    <!-- Controller Setup Page -->
                    <views:ControllerSetupView Visibility="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Setup}"/>
                    
                    <!-- Gun Configuration Page -->
                    <views:GunConfigView Visibility="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Guns}"/>
                    
                    <!-- Calibration Page -->
                    <views:CalibrationView Visibility="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Calibration}"/>
                    
                    <!-- Test Mode Page -->
                    <views:TestModeView Visibility="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Test}"/>
                    
                    <!-- Profiles Page -->
                    <views:ProfilesView Visibility="{Binding SelectedPage, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Profiles}"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Text="v1.0.0" 
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           VerticalAlignment="Center"
                           Opacity="0.5"/>
            </Grid>
        </Border>
    </Grid>
</Window>
